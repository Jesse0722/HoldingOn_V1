<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!--<TextView android:text="@string/hello_world" android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/textView" />-->


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/mission_imagebutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/mission" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/mission_imagebutton"
        android:layout_alignParentEnd="true"
        android:background="@drawable/abc_btn_check_to_on_mtrl_000" />

    <!--<DatePicker-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/datePicker"-->
        <!--android:layout_below="@+id/imageButton"-->
        <!--android:layout_alignParentStart="true" />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mission_imagebutton"
        android:layout_alignParentLeft="true"
        android:id="@+id/dateView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/dateView"
        android:layout_centerInParent="true"
        android:id="@+id/imageView"

       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="坚持不懈，拨云见日。"
        android:layout_marginTop="10dp"
        android:textSize="10pt"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:id="@+id/mottoView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:textSize="16pt"

        android:text="坚持啊"
        android:layout_below="@+id/mottoView"
        android:layout_centerInParent="true"
        android:id="@+id/button"
        android:background="#ffd2ffd9"
       />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/button"
    />


</RelativeLayout>
