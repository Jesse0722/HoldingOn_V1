<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back_imgbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/arrow180" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addmission_imgbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/add_button" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="任务"
        android:textSize="10pt"
        android:paddingTop="12dp"
        android:id="@+id/mission_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/missions_listview"
        android:layout_below="@+id/back_imgbutton"
        android:layout_alignLeft="@+id/back_imgbutton" />
</RelativeLayout>